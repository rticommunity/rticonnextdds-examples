<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/5.2.0/rti_dds_qos_profiles.xsd"
     version="5.2.0">
    <!-- QoS Library containing the QoS profile used in the generated example.

        A QoS library is a named set of QoS profiles.
    -->
    <qos_library name="cft_Library">

        <!-- QoS profile used to configure reliable communication between the DataWriter 
             and DataReader created in the example code.

             A QoS profile groups a set of related QoS.
        -->
        <qos_profile name="cft_Profile" is_default_qos="true">
            <!-- QoS used to configure the data writer created in the example code -->                
            <datawriter_qos>
                <reliability>
                    <kind>RELIABLE_RELIABILITY_QOS</kind>
                </reliability>                
                <!-- Enabled transient local durability to provide history to
                     late-joiners. -->
				<durability>
					<kind>TRANSIENT_LOCAL_DURABILITY_QOS</kind>
				</durability>
				<!-- The last twenty samples are saved for late joiners -->
                <history>
                    <kind>KEEP_LAST_HISTORY_QOS</kind>
                    <depth>20</depth>
                </history>
            </datawriter_qos>

            <!-- QoS used to configure the data reader created in the example code -->                
            <datareader_qos>
                <reliability>
                    <kind>RELIABLE_RELIABILITY_QOS</kind>
                </reliability>
                <!-- Enabled transient local durability to get history when
                     late-joining the DDS domain. -->
				<durability>
					<kind>TRANSIENT_LOCAL_DURABILITY_QOS</kind>
				</durability>    
				<!-- The last twenty samples are saved for late joiners -->
                <history>
                    <kind>KEEP_LAST_HISTORY_QOS</kind>
                    <depth>20</depth>                    
                </history>
            </datareader_qos>

            <participant_qos>
                <!--
                The participant name, if it is set, will be displayed in the
                RTI Analyzer tool, making it easier for you to tell one
                application from another when you're debugging.
                -->
                <participant_name>
                    <name>RTI Content Filtered Topic STRINGMATCH C# Example</name>
                </participant_name>

            </participant_qos>
        </qos_profile>

    </qos_library>
</dds>
